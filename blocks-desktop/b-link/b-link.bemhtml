block b-link {

    tag: 'a'

    attrs: {

        var ctx = this.ctx,
            url = ctx.url,
            props = ['title', 'target'], p,
            a = {
                  href: (typeof url === 'string' ? url :
                      (p = [], apply(this._buf = p, this._mode = '', this.ctx = url), p.join('')))
                };

        while(p = props.pop()) ctx[p] && (a[p] = ctx[p]);

        return a;

    }

}
